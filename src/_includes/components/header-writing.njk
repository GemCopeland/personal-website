      {% include "components/nav-link.njk" %}{% if tag %}<span class="color-grey"> &mdash; </span>{{ tag }}{% endif %}
    </div>
  </div>
  <div class="panel">
    <nav class="nav">
      <ul class="nav__list">
        <li class="nav__item nav__item--thinking">
          {% set linkUrl = '/thinking/' %}
